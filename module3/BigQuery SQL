-- Query public available table
SELECT station_id, name FROM
    bigquery-public-data.new_york_citibike.citibike_stations
LIMIT 100;

-- Creating external table referring to gcs path
CREATE OR REPLACE EXTERNAL TABLE `ny-rides-sal.ny_taxi.external_yellow_tripdata`
OPTIONS (
  format = 'CSV',
  uris = ['gs://ny-rides-sal/yellow/yellow_tripdata_2021-*.csv']
);

-- Check yello trip data
SELECT * FROM ny-rides-sal.ny_taxi.external_yellow_tripdata limit 10;

-- Create a non partitioned table from external table
CREATE OR REPLACE TABLE ny-rides-sal.ny_taxi.yellow_tripdata_non_partitoned AS
SELECT * FROM ny-rides-sal.ny_taxi.external_yellow_tripdata;


-- Create a partitioned table from external table
CREATE OR REPLACE TABLE ny-rides-sal.ny_taxi.yellow_tripdata_partitoned
PARTITION BY
  DATE(tpep_pickup_datetime) AS
SELECT * FROM ny-rides-sal.ny_taxi.external_yellow_tripdata;

-- Impact of partition
-- Scanning 70 MB of data
SELECT DISTINCT(VendorID)
FROM ny-rides-sal.ny_taxi.yellow_tripdata_non_partitoned
WHERE DATE(tpep_pickup_datetime) BETWEEN '2021-01-01' AND '2021-01-30';

-- Scanning ~20 MB of DATA
SELECT DISTINCT(VendorID)
FROM ny-rides-sal.ny_taxi.yellow_tripdata_partitoned
WHERE DATE(tpep_pickup_datetime) BETWEEN '2021-01-01' AND '2021-01-30';

-- Let's look into the partitons
SELECT table_name, partition_id, total_rows
FROM `ny_taxi.INFORMATION_SCHEMA.PARTITIONS`
WHERE table_name = 'yellow_tripdata_partitoned'
ORDER BY total_rows DESC;

-- Creating a partition and cluster table
CREATE OR REPLACE TABLE ny-rides-sal.ny_taxi.yellow_tripdata_partitoned_clustered
PARTITION BY DATE(tpep_pickup_datetime)
CLUSTER BY VendorID AS
SELECT * FROM ny-rides-sal.ny_taxi.external_yellow_tripdata;

-- Query scans 70 MB
SELECT count(*) as trips
FROM ny-rides-sal.ny_taxi.yellow_tripdata_partitoned
WHERE DATE(tpep_pickup_datetime) BETWEEN '2021-01-01' AND '2021-03-30'
  AND VendorID=1;

-- Query scans 65 MB
SELECT count(*) as trips
FROM ny-rides-sal.ny_taxi.yellow_tripdata_partitoned_clustered
WHERE DATE(tpep_pickup_datetime) BETWEEN '2021-01-01' AND '2021-03-30'
  AND VendorID=1;
